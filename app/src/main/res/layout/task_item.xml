<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    card:cardElevation="2dp"
    card:cardUseCompatPadding="true"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/remindRight"
            android:id="@+id/status"
            android:layout_alignParentStart="false"
            android:orientation="horizontal"
            android:layout_alignParentEnd="false" />

        <LinearLayout
            android:id="@+id/relatView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:id="@+id/linearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:textSize="16dp"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"
                android:id="@+id/drow"
                android:layout_below="@+id/linearLayout"
                android:layout_toRightOf="@+id/status"
                android:layout_toEndOf="@+id/status"
                android:orientation="vertical" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="11/04"
                    android:layout_below="@+id/drow"
                    android:layout_alignLeft="@+id/drow"
                    android:layout_alignStart="@+id/drow"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/isComment"
                    android:visibility="gone"
                    android:background="@drawable/ic_comment_black_18dp"
                    android:layout_gravity="center_vertical"
                    android:alpha="0.8"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>